{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
  },
  "include": ["src/**/*.ts", ".eslintrc.js", ".prettierrc.js"],
  "exclude": ["node_modules"]
}
